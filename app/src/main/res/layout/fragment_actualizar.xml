<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".actualizar">



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ID:"
            android:textColor="@color/white"
            android:textColorHighlight="#0D3444"
            android:textColorHint="#0D3444"
            android:textColorLink="#0D3444"
            android:textSize="18sp" />

        <!-- EditText para ingresar el Nombre -->
        <EditText
            android:id="@+id/editTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id jugador"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Text View para el Nombre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nombre:"
            android:textColor="@color/white"
            android:textColorHighlight="#0D3444"
            android:textColorHint="#0D3444"
            android:textColorLink="#0D3444"
            android:textSize="18sp" />

        <!-- EditText para ingresar el Nombre -->
        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre jugador"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Text View para la Posicion -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Posicion:"
            android:textColor="@color/white"
            android:textColorHighlight="#0D3444"
            android:textColorHint="#0D3444"
            android:textColorLink="#0D3444"
            android:textSize="18sp" />

        <!-- EditText para ingresar la posicion -->
        <EditText
            android:id="@+id/editTextPosicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Posicion jugador"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Text View para la Posicion -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Equipo:"
            android:textColor="@color/white"
            android:textColorHighlight="#0D3444"
            android:textColorHint="#0D3444"
            android:textColorLink="#0D3444"
            android:textSize="18sp" />

        <!-- EditText para ingresar la posicion -->
        <EditText
            android:id="@+id/editTextEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Equipo jugador"
            android:inputType="text"
            android:minHeight="48dp" />




        <Button
            android:id="@+id/buttonActualizarJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:text="Actualizar Jugador"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>